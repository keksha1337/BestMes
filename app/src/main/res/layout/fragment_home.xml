<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_main_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/home_car_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/home_about_tv"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/home_car_iv_margin_start"
        android:layout_marginTop="@dimen/home_car_iv_margin_top"
        android:layout_marginEnd="@dimen/home_car_iv_margin_end"
        android:layout_marginBottom="@dimen/home_car_iv_margin_bottom"
        android:src="@drawable/home_illustration_android"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/home_about_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scan_button"
        android:layout_marginStart="@dimen/home_about_tv_margin_start"
        android:layout_marginEnd="@dimen/home_about_tv_margin_end"
        android:layout_marginBottom="@dimen/home_about_tv_margin_bottom"
        android:gravity="center"
        android:text="@string/main_about_manual"
        android:textColor="@color/darkSlateBlue"
        android:textSize="@dimen/text_size_18" />

    <Button
        android:id="@+id/scan_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_scab_button_height"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/home_scab_button_margin_start"
        android:layout_marginEnd="@dimen/home_scab_button_margin_end"
        android:layout_marginBottom="@dimen/home_scab_button_margin_bottom"
        android:background="@drawable/round_corner"
        android:text="@string/scan_now"
        android:textColor="@color/white" />
</RelativeLayout>